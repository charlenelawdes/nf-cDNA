params {
    fastq = null
    headcrop = 0
    maxlength = 2147483647
    minlength = 1
    quality = 0
    tailcrop = 0
    threads = 4
    contam = null
    out_dir = "${launchDir}/output"
    id = "aligned"
    t = 4
    reads = null
    ref = null
}

process {
    withLabel:process_chop {
        container="ghcr.io/charlenelawdes/chopper-docker:latest"
    }
    withLabel:minimap {
        container="ghcr.io/bwbioinfo/minimap2-docker-cwl:latest"
    }
    withLabel:samtools {
        container="ghcr.io/bwbioinfo/samtools-docker-cwl:latest"
    }
    withName:multiqc {
        container="multiqc/multiqc:latest"
    }
}

profiles {
    docker {
        docker.enabled=true
    }
    apptainer {
        apptainer.enabled=true
        apptainer.autoMounts=true 
    }
}